#include <stdio.h>
#include <stdlib.h>
#include <math.h>


int board[N];
int solution_count = 0;

int is_safe(int row, int col) {
    for (int i = 0; i < row; i++) {
        if (board[i] == col || abs(board[i] - col) == abs(i - row)) {
            return 0;
        }
    }
    return 1;
}

void print_board() {
    solution_count++;
    printf("Solution %d:\n", solution_count);
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (board[i] == j)
                printf(" Q ");
            else
                printf(" . ");
        }
        printf("\n");
    }
    printf("\n");
}

void solve(int row) {
    if (row == N) {
        print_board();
        return;
    }

    for (int col = 0; col < N; col++) {
        if (is_safe(row, col)) {
            board[row] = col;
            solve(row + 1);
        }
    }
}

int main() {
    solve(0);
    printf("Total solutions: %d\n", solution_count);
    return 0;
}
